# Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=User Profile API
API_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://activity_user:password@localhost:5432/activity
DATABASE_POOL_MIN_SIZE=10
DATABASE_POOL_MAX_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=0
REDIS_RATE_LIMIT_DB=1

# JWT Authentication (from auth-api)
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# Service-to-Service API Keys
ACTIVITIES_API_KEY=activities-service-key-change-in-production
PARTICIPATION_API_KEY=participation-service-key-change-in-production
MODERATION_API_KEY=moderation-service-key-change-in-production
PAYMENT_API_KEY=payment-processor-key-change-in-production

# External Services
IMAGE_API_URL=http://image-api:8001
IMAGE_API_CDN_DOMAIN=cdn.example.com
EMAIL_API_URL=http://email-api:8002
AUTH_API_URL=http://auth-api:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Caching
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
